<div class = "question_show_partial" >
  <div class = "question_votes" >
    <% if logged_in? %>
      <% @question = question %>
       <%= render partial: "votes/vote_buttons", locals: {question: @question, votable_type: "Question", votable_id: @question.id} %>
     <% else %>
       points: <%= @question.vote_count %>
     <% end %>
  </div>
  <div class = "question_buttons" >
    <% if logged_in? && @question.user_id == current_user.id || current_user.is_admin %>
      <%= link_to_if(current_user, "Edit", { controller: "questions", action: "edit", id: @question.id }) %>
      <%= button_to "Delete", @question, {method: "delete", confirm: "Are you sure you want to delete this question?"} %>
    <% end %>
  </div>
  <ul class = "question_content" >
    <li class = "question_title" >
      <a href="/questions/<%= @question.id %>" id="<%= @question.id %>"><h2><%= @question.title %></h2></a><%= @question.updated_at %>
    </li>
    <li class = "question_body" >
      <%= @question.body %>
    </li>
  </ul>
</div>
