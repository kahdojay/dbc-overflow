<%= form_for :vote, url: '/votes/upvote' do |f|  %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :votable_type, value: votable_type %>
  <%= f.hidden_field :votable_id, value: votable_id %>
  <%= f.hidden_field :upvote, value: true %>
  <%= f.submit 'Upvote' %>
<% end %>

<h3><%= vote_count %></h3>

<%= form_for :vote, url: '/votes/downvote' do |f|  %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :votable_type, value: votable_type %>
  <%= f.hidden_field :votable_id, value: votable_id %>
  <%= f.hidden_field :upvote, value: false %>
  <%= f.submit 'Downvote' %>
<% end %>
